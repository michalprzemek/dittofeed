# Dittofeed Environment Variables
# Populate these with your actual credentials.

DATABASE_URL="postgresql://DATABASE_USER:DATABASE_PASSWORD@dittofeed-postgres:5432/dittofeed"
DATABASE_USER="your_postgres_user"
DATABASE_PASSWORD="your_postgres_password"

CLICKHOUSE_URL="http://dittofeed-clickhouse-server:8123"
CLICKHOUSE_USER="your_clickhouse_user"
CLICKHOUSE_PASSWORD="your_clickhouse_password"

# Admin Dashboard Credentials
PASSWORD="your_admin_password" # Password for the default admin user
SECRET_KEY="a_very_secret_key_replace_me" # Used for signing session cookies and other sensitive data

# Base URL for the dashboard API
DASHBOARD_API_BASE="http://localhost:3000" # Adjust if you change the dashboard port
